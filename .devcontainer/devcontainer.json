{
  "name": "Flutter Web Dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "bash .devcontainer/install-flutter.sh",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Flutter Web",
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code",
        "GitHub.copilot"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "dart.flutterSdkPath": "/home/codespace/flutter"
      }
    }
  }
}
